#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int X;
    int L;
    int S;
    
    do 
    {
        printf("What should the height of the Pyramid be?: ");
        X = GetInt();
        
    } while ((X < 0) || (X > 23));
    
        
            for (int i = 0; i < X; i++)
            {
                
                for (S = X - 1; S > i; S--)
                    printf(" ");
        
                for (L = 0; L <= i; L++)
                    printf("#");
                    printf("#");
                    
                printf("\n");
                
            }
        
}


